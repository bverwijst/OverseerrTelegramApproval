# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Telegram Chat ID (group or user chat ID)
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Overseerr API URL (include /api/v1 at the end)
OVERSEERR_API_URL=http://your-overseerr-url/api/v1

# Overseerr API Key (from Overseerr settings)
OVERSEERR_API_KEY=your-overseerr-api-key

# Webhook secret (make this a strong random string)
WEBHOOK_SECRET=your-webhook-secret

# Port for the Flask app
PORT=8080

# Admin password for bot login
ADMIN_PASSWORD=your-admin-password

# Paths for persistent admin/user storage (should match your Docker volume)
ADMINS_FILE=data/admins.json
USERS_FILE=data/users.json